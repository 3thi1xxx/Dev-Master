<!-- 1. Toggle Auto-Continue -->
<dict>
    <key>Name</key>
    <string>Toggle Auto-Continue</string>
    <key>Triggers</key>
    <array>
        <dict>
            <key>MacroTriggerType</key>
            <string>HotKey</string>
            <key>KeyCode</key>
            <integer>18</integer> <!-- 1 on Apple keyboard -->
            <key>Modifiers</key>
            <integer>768</integer> <!-- Command+Shift -->
        </dict>
    </array>
    <key>Actions</key>
    <array>
        <dict>
            <key>MacroActionType</key>
            <string>SetVariableToCalculation</string>
            <key>Variable</key>
            <string>AutoContinueEnabled</string>
            <key>Calculation</key>
            <string>%Variable%AutoContinueEnabled% == 0 ? 1 : 0</string>
        </dict>
        <dict>
            <key>MacroActionType</key>
            <string>IfThenElse</string>
            <key>ConditionList</key>
            <array>
                <dict>
                    <key>ConditionType</key>
                    <string>Variable</string>
                    <key>Variable</key>
                    <string>AutoContinueEnabled</string>
                    <key>Operator</key>
                    <string>is</string>
                    <key>Value</key>
                    <string>1</string>
                </dict>
            </array>
            <key>ThenActions</key>
            <array>
                <dict>
                    <key>MacroActionType</key>
                    <string>DisplayTextBriefly</string>
                    <key>Text</key>
                    <string>Auto-Continue: ON</string>
                    <key>Seconds</key>
                    <real>2</real>
                </dict>
                <dict>
                    <key>MacroActionType</key>
                    <string>ExecuteMacro</string>
                    <key>MacroName</key>
                    <string>Continue Button Clicker</string>
                </dict>
            </array>
            <key>ElseActions</key>
            <array>
                <dict>
                    <key>MacroActionType</key>
                    <string>DisplayTextBriefly</string>
                    <key>Text</key>
                    <string>Auto-Continue: OFF</string>
                    <key>Seconds</key>
                    <real>2</real>
                </dict>
                <dict>
                    <key>MacroActionType</key>
                    <string>CancelMacro</string>
                    <key>MacroName</key>
                    <string>Continue Button Clicker</string>
                </dict>
            </array>
        </dict>
    </array>
</dict>

